{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: FastAPI",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/backend/main.py",
			"console": "integratedTerminal",
			"cwd": "${workspaceFolder}/backend",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/backend"
			},
			"justMyCode": true
		},
		{
			"name": "Python: FastAPI (uvicorn)",
			"type": "debugpy",
			"request": "launch",
			"module": "uvicorn",
			"args": [
				"main:app",
				"--reload",
				"--host",
				"0.0.0.0",
				"--port",
				"8000"
			],
			"jinja": true,
			"justMyCode": true,
			"cwd": "${workspaceFolder}/backend",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/backend"
			}
		},
		{
			"name": "Frontend: Vite Dev Server",
			"type": "node",
			"request": "launch",
			"name": "Launch Vite",
			"runtimeExecutable": "bun",
			"runtimeArgs": ["run", "dev"],
			"cwd": "${workspaceFolder}/frontend",
			"serverReadyAction": {
				"pattern": "Local:.*https?://localhost:([0-9]+)",
				"uriFormat": "http://localhost:%s",
				"action": "openExternally"
			}
		}
	],
	"compounds": [
		{
			"name": "Full Stack: Backend + Frontend",
			"configurations": [
				"Python: FastAPI (uvicorn)",
				"Frontend: Vite Dev Server"
			],
			"presentation": {
				"hidden": false,
				"group": "",
				"order": 1
			},
			"stopAll": true
		}
	]
}
