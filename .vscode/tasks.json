{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "uv sync",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "bun install",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "uv run uvicorn main:app --reload --host 0.0.0.0 --port 8000",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Start Frontend Server",
			"type": "shell",
			"command": "bun run dev",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Lint Frontend",
			"type": "shell",
			"command": "bun run lint",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Format Frontend",
			"type": "shell",
			"command": "bun run format",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Lint Backend",
			"type": "shell",
			"command": "uv run ruff check .",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": {
				"owner": "python",
				"fileLocation": ["relative", "${workspaceFolder}/backend"],
				"pattern": {
					"regexp": "^(.+):(\\d+):(\\d+):\\s+(\\w+)\\s+(.+)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "test",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Format Backend",
			"type": "shell",
			"command": "uv run ruff format .",
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Run Both Servers",
			"dependsOn": [
				"Start Backend Server",
				"Start Frontend Server"
			],
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
